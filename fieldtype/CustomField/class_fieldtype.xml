            <tokenizer name="standard"/>
            <filter name="stop" ignoreCase="true" />
            <filter name="lowercase"/>
        </analyzer>
        <analyzer type="index">
            <tokenizer name="standard"/>
            <filter name="stop" ignoreCase="true" />
            <filter name="lowercase"/>
        </analyzer>
        <analyzer type="query">
            <tokenizer name="standard"/>
            <filter name="stop" ignoreCase="true"/>
            <filter name="lowercase"/>
        </analyzer>
    </fieldType>

</schema>