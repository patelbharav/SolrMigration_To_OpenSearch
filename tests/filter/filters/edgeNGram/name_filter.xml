<?xml version="1.0" encoding="UTF-8" ?>
<schema>
    <fieldType name="standard-default" class="solr.TextField">
        <analyzer>
                <filter name="edgeNGram" minGramSize="1" maxGramSize="1"/>
        </analyzer>
    </fieldType>

    <fieldType name="standard" class="solr.TextField">
        <analyzer>
                <filter name="edgeNGram" minGramSize="1" maxGramSize="1" preserveOriginal="true"/>
        </analyzer>
    </fieldType>
</schema>