<?xml version="1.0" encoding="UTF-8" ?>
<schema>
    <fieldType name="standard-default" class="solr.TextField">
        <analyzer>
                <filter class="solr.ShingleFilterFactory"/> 
        </analyzer>
    </fieldType>

    <fieldType name="standard" class="solr.TextField">
        <analyzer>
                <filter class="solr.ShingleFilterFactory" minShingleSize="3" maxShingleSize="4" outputUnigrams="false" 
                outputUnigramsIfNoShingles="true" tokenSeparator="-" fillerToken="-"/>
        </analyzer>
    </fieldType>
</schema>