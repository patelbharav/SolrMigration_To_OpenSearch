<?xml version="1.0" encoding="UTF-8" ?>
<schema>
    <fieldType name="edge_ngram_default" class="solr.TextField">
        <analyzer>
            <tokenizer class="solr.EdgeNGramTokenizerFactory"/>
        </analyzer>
    </fieldType>

    <fieldType name="edge_ngram_custom" class="solr.TextField">
        <analyzer>
            <tokenizer class="solr.EdgeNGramTokenizerFactory" 
                      minGramSize="2" 
                      maxGramSize="4"/>
        </analyzer>
    </fieldType>
</schema>
