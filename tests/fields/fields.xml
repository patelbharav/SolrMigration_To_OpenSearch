<?xml version="1.0" encoding="UTF-8" ?>
<schema>
    <fields>
        <!-- Text field with all basic attributes -->
        <field name="title" type="text_general" indexed="true" stored="true" required="true" multiValued="true"/>

        <!-- String field with doc values -->
        <field name="id" type="string" indexed="true" stored="true" required="true" docValues="true"/>

        <!-- Numeric fields -->
        <field name="age" type="int" indexed="true" stored="true" docValues="true"/>
        <field name="price" type="float" indexed="true" stored="true"/>
        <field name="quantity" type="long" indexed="true" stored="true"/>
        <field name="rating" type="double" indexed="true" stored="true"/>

        <!-- Date field -->
        <field name="created_date" type="date" indexed="true" stored="true" docValues="true"/>

        <!-- Boolean field -->
        <field name="is_active" type="boolean" indexed="true" stored="true"/>

        <!-- Binary field -->
        <field name="file_content" type="binary_field" stored="true"/>

        <!-- Nested field -->
        <field name="metadata" type="nested_path" stored="true" multiValued="true"/>

        <!-- Spatial fields -->
        <field name="location" type="point_field" indexed="true" stored="true"/>
        <field name="area" type="spatial_rpt" indexed="true" stored="true"/>

        <!-- Field with all possible attributes -->
        <field name="full_text" type="text_general" 
               indexed="true" 
               stored="true" 
               docValues="true" 
               multiValued="true" 
               required="true" 
               useDocValuesAsStored="true" 
               omitNorms="true" 
               termOffsets="true" 
               termVectors="true" 
               termPositions="true"/>
    </fields>
</schema>
