<?xml version="1.0" encoding="UTF-8" ?>
<schema>
    <fieldType name="standard-default" class="solr.TextField">
        <analyzer>
                <filter class="solr.NGramFilterFactory" minGramSize="1" maxGramSize="2"/>
        </analyzer>
    </fieldType>

    <fieldType name="standard" class="solr.TextField">
        <analyzer>
                <filter class="solr.NGramFilterFactory" minGramSize="1" maxGramSize="5"  preserveOriginal="true"/>
        </analyzer>
    </fieldType>
</schema>